<?xml version="1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Listener">
    <!-- Nếu muốn chạy listener trong nhiều class thì dùng file XML -->
    <listeners>
        <!-- Khi trỏ như thế này  thì các Topic khác sẽ không dùng được,  vì nó đang cố định tại  thằng Topic 13 -->
        <!-- Nếu dùng bên file XML thì bỏ annotation Listener bên Topic 13 đi       -->
        <listener class-name="listener.ScreenshotListener"></listener>
    </listeners>

    <test name="Run on Chrome" preserve-order="true">
        <classes>
            <class name="testng.Topic_02_Assertion"/>
            <class name="testng.Topic_04_Always_Run"/>
            <class name="testng.Topic_01_Annotations"/>
            <class name="testng.Topic_06_Skip_Testcase"/>
            <class name="testng.Topic_05_Priority"/>
            <class name="testng.Topic_07_Description"/>
            <class name="testng.Topic_10_Loop"/>
            <class name="testng.Topic_11_Timeout"/>
            <class name="testng.Topic_03_Group"/>
            <class name="testng.Topic_08_Data_Provider"/>
            <class name="testng.Topic_09_Parallel"/>
            <!-- Chỉ có Topic 13 mới sử dụng được chưa năng Listener-->
            <class name="testng.Topic_13_Listener"/>
        </classes>
    </test>
</suite>